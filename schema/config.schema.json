{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ImageMapMenuConfig",
    "type": "object",
    "required": [
        "canvas",
        "spots"
    ],
    "properties": {
        "canvas": {
            "type": "object",
            "required": [
                "width",
                "height",
                "image"
            ],
            "properties": {
                "width": {
                    "type": "number",
                    "minimum": 1
                },
                "height": {
                    "type": "number",
                    "minimum": 1
                },
                "image": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "spots": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "rect",
                    "menu"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "rect": {
                        "type": "array",
                        "description": "[x1, y1, x2, y2]",
                        "minItems": 4,
                        "maxItems": 4,
                        "items": {
                            "type": "number"
                        }
                    },
                    "menu": {
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "$ref": "#/definitions/menuItem"
                        }
                    }
                },
                "additionalProperties": false
            }
        }
    },
    "definitions": {
        "menuItem": {
            "type": "object",
            "required": [
                "title"
            ],
            "properties": {
                "title": {
                    "type": "string"
                },
                "url": {
                    "type": "string",
                    "format": "uri"
                },
                "children": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/menuItem"
                    }
                }
            },
            "additionalProperties": false,
            "oneOf": [
                {
                    "required": [
                        "url"
                    ]
                },
                {
                    "required": [
                        "children"
                    ]
                }
            ]
        }
    }
}